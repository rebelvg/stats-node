{
  "compilerOptions": {
    "lib": ["ES2022"],
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "declaration": true,
    "incremental": false,
    "diagnostics": true,
    "extendedDiagnostics": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "outDir": "./dist"
  },
  "exclude": ["./dist", "./.scripts"],
  "include": ["./src/**/*"]
}
