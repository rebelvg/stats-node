{
  "name": "stats-node",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "pre-push": "yarn run lint",
    "prettier": "prettier \"**/*\" --list-different --ignore-unknown",
    "prettier:fix": "prettier \"**/*\" --write --ignore-unknown",
    "lint": "eslint . && yarn run prettier && yarn tsc --project tsconfig.eslint.json",
    "lint:fix": "eslint . --fix && yarn run prettier:fix",
    "migrate": "tsx ./src/migrate.ts",
    "start:prod": "yarn run migrate && node dist/index.js",
    "start": "tsx watch src/index.ts",
    "docker:import": "docker exec stats_node_db mongorestore",
    "pre:deploy": "yarn install && yarn run build && yarn run migrate",
    "pm2:setup": "yarn run pre:deploy && pm2 start pm2.json",
    "pm2": "yarn run pre:deploy && pm2 restart stats-node",
    "build": "tsc",
    "prepare": "husky"
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/router": "^15.1.1",
    "axios": "^1.13.2",
    "google-auth-library": "^10.5.0",
    "googleapis": "^169.0.0",
    "ip6addr": "^0.2.3",
    "jsonwebtoken": "^9.0.3",
    "koa": "^3.1.1",
    "koa-bodyparser": "^4.2.1",
    "koa-morgan": "^1.0.1",
    "koa-qs": "^3.0.0",
    "koa-session": "^7.0.2",
    "locutus": "^2.0.11",
    "lodash": "^4.17.4",
    "moment": "^2.19.1",
    "mongodb": "^7.0.0",
    "uuid": "^13.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/ip6addr": "^0.2.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/koa": "^3.0.1",
    "@types/koa-bodyparser": "^4.2.1",
    "@types/koa-morgan": "^1.0.4",
    "@types/koa-qs": "^2.0.0",
    "@types/koa-session": "^6.4.5",
    "@types/koa__cors": "^5.0.1",
    "@types/locutus": "^0.0.8",
    "@types/lodash": "^4.14.150",
    "@types/node": "^25.0.1",
    "@types/uuid": "^11.0.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "prettier": "^3.4.1",
    "source-map-support": "^0.5.21",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.49.0"
  }
}
